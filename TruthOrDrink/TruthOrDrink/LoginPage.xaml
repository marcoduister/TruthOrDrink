<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.LoginPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Truth or Drink" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            
            <StackLayout Orientation="Vertical" Spacing="10">
                <Entry x:Name="EmailEntry" Text="{Binding EmailEntry}" Placeholder="Email"/>
                <Entry x:Name="PasswordEntry" Text="{Binding PasswordEntry}" Placeholder="Password"   
                        IsPassword="True"/>
            </StackLayout>

            <Button x:Name="LoginButton" Text="Login" TextColor="Black" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#42C2F0"  Clicked="LoginButton_Clicked" />
            
        </StackLayout>

    </StackLayout>
</ContentPage>