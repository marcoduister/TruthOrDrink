<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Views.MainPage"
             NavigationPage.HasNavigationBar="false">

    <StackLayout>
        <StackLayout>
            <Image Style="{StaticResource LogoStyle}" />
        </StackLayout>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">

            <Button x:Name="LoginreRedirectButton" Text="Login"  Clicked="LoginRedirectButton_Clicked" />
            <Button x:Name="RegisterRedirectButton" Text="Register" Clicked="RegisterRedirectButton_Clicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
