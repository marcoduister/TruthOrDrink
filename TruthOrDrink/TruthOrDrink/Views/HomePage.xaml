<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Views.HomePage"
             NavigationPage.HasBackButton="False">
    <StackLayout>
        <Frame BackgroundColor="#00FBC1BC" Padding="24" CornerRadius="0">
            <Label Text="Truth or Drink" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            <Button x:Name="PlayRedirectButton" Text="Play" TextColor="White" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#FDAF01" Clicked="PlayRedirectButton_Clicked" />
            <Button x:Name="GameRulesRedirectButton" Text="Game Rules" TextColor="White" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#FDAF01"  Clicked="GameRulesRedirectButton_Clicked" />
            <Button x:Name="CategoryRedirectButton" Text="Categorys" TextColor="White" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#FDAF01" Clicked="CategoryRedirectButton_Clicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>