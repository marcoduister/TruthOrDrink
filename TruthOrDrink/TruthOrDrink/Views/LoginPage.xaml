<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Views.LoginPage" >

    <StackLayout>

        <StackLayout>
            <Frame Style="{StaticResource LogoFrameStyle}" >
                <Label Text="Truth or Drink" Style="{StaticResource LogoLabelStyle}"/>
            </Frame>
            <Image Source="liqore.png" />
        </StackLayout>
        
        
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            <StackLayout Orientation="Vertical" Spacing="10">
                <Frame Style="{StaticResource FrameEntryStyle}" >
                    <Entry x:Name="EmailEntry" Text="{Binding EmailEntry}" Placeholder="Email"/>
                </Frame>
                <Frame Style="{StaticResource FrameEntryStyle}" >
                    <Entry x:Name="PasswordEntry" Text="{Binding PasswordEntry}" Placeholder="Password" IsPassword="True"/>
                </Frame>
                <Label x:Name="ValidateLabel" Style="{StaticResource ErrorLabel}"/>
            </StackLayout>
            <Button x:Name="LoginButton" Text="Login" Clicked="LoginButton_Clicked" />
        </StackLayout>
    </StackLayout>
</ContentPage> 